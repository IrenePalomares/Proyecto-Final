<%- include('template/cabeceraInfo') %>

<link rel="stylesheet" href="/CSS/partida.css">

<%- include('template/cabecerainfo2') %>

<body class="fondo p-0 m-0">
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
        </symbol>
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </symbol>
        <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
        </symbol>
    </svg>
    <% if(error === 'success') { %>
        <div class="alert alert-success alert-dismissible fade w-100 show mt-3 mb-0" role="alert">
            
            <p class="m-0"><svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
                <strong class="text-center"><%= mensaje %></strong> 
            </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <% if(error === 'error') { %>
        <div class="alert alert-danger alert-dismissible fade w-100 show mt-3" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
            <strong class="text-center"><%= mensaje %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    
    <div class="container-fluid p-0 blanco mt-3 mb-3 movil">
        <form action="/Partida" method="POST" class="  mt-3">
            <div class="row fnegro blanco rounded-top w-100 m-0">
                <div class="col-lg-12 col-md-12 p-0 text-center">
                    <h1>TRIVIAL LOS ABSOLUTOS</h1>
                </div>
            </div>
            <div class="row fblanco negro p-2 w-100 m-0">
                <div class="col-12 p-0">
                    <div class="row w-100 m-0">
                        <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-2 col-sm-12 col-12 p-0 ">
                            <div class="row  rounded w-100 m-0 d-flex justify-content-evenly">
                                <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12 col-sm-5 col-5 border border-dark border-3 rounded p-1">
                                    <% switch (categoria) { case 'TC': %>
                                        <img class="rounded" src="/IMG/absolutos.png" alt="" srcset="" width="100%" height="100%">
                                            <% break;
                                        case 'V': %>
                                        <img class="rounded" src="/IMG/V.jpg" alt="" srcset="" width="100%" height="100%">
                                            <% break;
                                        case 'P': %>
                                        <img class="rounded" src="/IMG/personajes.png" alt="" srcset="" width="100%" height="100%">
                                            <% break;
                                        case 'PD': %>
                                        <img class="rounded" src="/IMG/Poison.jpg" alt="" srcset="" width="100%" height="100%">
                                            <% break;
                                        case 'BR': %>
                                        <img class="rounded" src="/IMG/Black.jpg" alt="" srcset="" width="100%" height="100%">
                                            <% break;
                                        case 'R': %>
                                        <img class="rounded" src="/IMG/R.jpg" alt="" srcset="" width="100%" height="100%">
                                            <% break;
                                        case 'G': %>
                                        <img class="rounded" src="/IMG/G.jpg" alt="" srcset="" width="100%" height="100%">
                                            <% break; %>
                                    <% } %>
                                </div>
                                <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12 col-sm-5 col-5 text-center p-1">
                                    <div class="row h-100 w-100 m-0">
                                        <div class="col-12 p-0 d-flex flex-column justify-content-evenly align-items-center">
                                            <div class="row w-100 m-0 ">
                                                <% switch (categoria) { case 'TC': %>
                                                    <h6 style="font-weight: bold;">Todas las Categorías</h6>
                                                        <% break;
                                                    case 'V': %>
                                                    <h6 style="font-weight: bold;">Verdacksal</h6>
                                                        <% break;
                                                    case 'P': %>
                                                    <h6 style="font-weight: bold;">Personajes</h6>
                                                        <% break;
                                                    case 'PD': %>
                                                    <h6 style="font-weight: bold;">Poison Devils</h6>
                                                        <% break;
                                                    case 'BR': %>
                                                    <h6 style="font-weight: bold;">Black Ravens</h6>
                                                        <% break;
                                                    case 'R': %>
                                                    <h6 style="font-weight: bold;">Renegados</h6>
                                                        <% break;
                                                    case 'G': %>
                                                    <h6 style="font-weight: bold;">Geografía</h6>
                                                        <% break;
                                                } %>
                                            </div>
                                            <div class="row w-100 m-0">
                                                <div class="col-6 p-0 text-center" style="font-weight: bold;">
                                                    <%= nombre %>
                                                </div>
                                                <!-- <div class="col-6 p-0 text-center" style="font-weight: bold;">
                                                    <p id="minutes">00:00</p>
                                                </div> -->
                                                <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12 p-0 text-center" style="font-weight: bold;">
                                                    Puntos: <%= puntuacion %>
                                                </div>
                                            </div>
                                            <!-- <div class="row w-100 m-0">
                                                <div class="col-12 text-center" style="font-weight: bold;">
                                                    Puntos: <%= //puntuacion %>
                                                </div>
                                            </div> -->
                                            <div class="row w-100 m-0">
                                                <div class="col-12 p-0 m-0 text-center">
                                                    <a href="/" id="finalizar" class="btn fnegro blanco w-100" style="font-weight: bold;">Finalizar</a href="/">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-12 col-12 p-lg-0 p-md-0 pt-sm-2 pt-2 d-lg-flex flex-column justify-content-start">
                            <div class="row w-100 m-0 mt-lg-3 mt-md-2">
                                <div class="col-12 p-0">
                                    <h5 class="pregunta"><%= Pregunta.Pregunta %></h5>
                                </div>
                            </div>
                            <div class="row w-100 m-0 mt-lg-3 mt-md-3">
                                <div class="col-12 p-0">
                                    <button id="A" class="btn fblanco negro w-100 text-left respuestas" style="font-weight: bold;" name="respuesta" value="A">A. <%= Pregunta.A %></button>
                                </div>
                            </div>
                            <div class="row w-100 m-0 mt-lg-3 mt-md-3">
                                <div class="col-12 p-0">
                                    <button id="B" class="btn fblanco negro w-100 text-left respuestas" style="font-weight: bold;" name="respuesta" value="B">B. <%= Pregunta.B %></button>
                                </div>
                            </div>
                            <div class="row w-100 m-0 mt-lg-3 mt-md-3">
                                <div class="col-12 p-0">
                                    <button id="C" class="btn fblanco negro w-100 text-left respuestas" style="font-weight: bold;" name="respuesta" value="C">C. <%= Pregunta.C %></button>
                                </div>
                            </div>
                            <div class="row w-100 m-0 mt-lg-3 mt-md-3">
                                <div class="col-12 p-0">
                                    <button id="D" class="btn fblanco negro w-100 text-left respuestas" style="font-weight: bold;" name="respuesta" value="D">D. <%= Pregunta.D %></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
    <%- include('template/piedepagina') %>
</html>
