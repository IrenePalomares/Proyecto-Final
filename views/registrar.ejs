<%- include('template/cabecera') %>

<body id="body" class="fondo">
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
        </symbol>
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </symbol>
        <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
        </symbol>
    </svg>
                <% if(typeof validaciones != 'undefined') { %>
                    <% validaciones.forEach( (validacion) => { %>
                        <div class="alert alert-danger alert-dismissible fade w-100 show mt-3 mb-0" role="alert">
                            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                            <strong class="text-center"><%= validacion.msg %></strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% }) %>
                <% } %>
                <% if(error == 'error') { %>
                    <div class="alert alert-danger alert-dismissible fade w-100 show mt-3 mb-0" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                        <strong class="text-center"><%= mensaje %></strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                <% } %>
    <form action="/Registrar" method="POST" class="mt-3 mb-3">
        <div class="container fnegro rounded movil">
            <div class="row fblanco negro rounded-top">
                <div class="col-lg-12 col-md-12 rounded p-0 text-center">
                    <h1>TRIVIAL LOS ABSOLUTOS</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 d-none d-lg-flex d-md-flex p-0 rounded-left d-flex jusify-content-center align-self-stretch">
                    <div class="row rounded-left w-100 m-0">
                        <img  class="w-100 p-0" src="/IMG/registro.jpg" alt="">
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 d-flex flex-column justify-content-evenly">
                    <div class="row p-0 text-center mt-4">
                        <div class="col-xl-12 col-lg-12 col-md-12 blanco">
                            <h1>¡Regístrate!</h1>
                        </div>
                    </div>
                    <div class="row p-0 text-center">
                        <div class="col-xl-12 col-lg-12 col-md-12 blanco">
                            <h4>(Si es con un nombre de cuento mejor... <i class="bi bi-emoji-wink"></i>)</h4>
                        </div>
                    </div>
                    <div class="row w-100 m-0 align-self-center mt-4">
                        <div class="col-xl-12 col-lg-12 col-md-12 p-0">
                            <div class="row align-self-start">
                                <div class="col-xl-12 col-lg-12 col-md-12">
                                    <div class="form-floating">
                                        <input type="text" name="usuario" id="usuario" class="form-control" placeholder="Nombre Jugador" value="<% if(typeof valores != 'undefined') { %><%= valores.usuario %><% } %>">
                                        <label for="usuario" style="font-weight: bold;">Nombre Jugador*</label>
                                    </div>
                                </div>
                            </div>
                            <div class="row align-self-start mt-xl-5 mt-lg-5 mt-md-3 mt-sm-3 mt-3">
                                <div class="col-xl-12 col-lg-12 col-md-12">
                                    <div class="form-floating">
                                        <input type="text" name="correo" id="correo" class="form-control" placeholder="Correo electrónico" value="<% if(typeof valores != 'undefined') { %><%= valores.correo %><% } %>">
                                        <label for="correo" style="font-weight: bold;">Correo electrónico*</label>
                                    </div>
                                </div>
                            </div>
                        
                            <div class="row align-self-start mt-xl-5 mt-lg-5 mt-md-3 mt-sm-3 mt-3">
                                <div class="form-floating col-lg-6 col-md-12 col-sm-12">
                                    <input type="password" name="contrasena" id="contrasena" class="form-control" placeholder="Contraseña" value="<% if(typeof valores != 'undefined') { %><%= valores.contrasena %><% } %>">
                                    <label for="contrasena" style="font-weight: bold;">Contraseña*</label>
                                </div>
                                <div class="form-floating col-xl-6 col-lg-6 col-md-12 col-sm-12 mt-lg-0 mt-md-3 mt-sm-3 mt-3">
                                    <input type="password" name="confirmar" id="confirmar" class="form-control" placeholder="Confirmar Contraseña" style="width: 100%;" value="<% if(typeof valores != 'undefined') { %><%= valores.confirmar %><% } %>">
                                    <label for="confirmar" style="font-weight: bold;"> Confirmar Contraseña*</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3 align-self-start">
                        <div class="form-check-floating col-lg-12 col-md-12 col-sm-12">
                            <input type="checkbox" required name="" class="form-check-input" id="checkbox-1">
                            <label for="checkbox-1" class="form-check-label blanco">Acepto los términos y condiciones</label>
                        </div>
                    </div>
                    <div class="row mb-4 mt-4">
                        <div class="col-lg-12 col-md-12 col-sm-12 d-flex justify-content-center">
                            <button id="registrarboton" class="btn fondo negro" style="font-weight: bold;">Registrar</button>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </form>
</body>
