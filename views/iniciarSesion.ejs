<%- include('template/cabecera') %>

<body id="body" class="fondo">
    <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
        <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
        </symbol>
        <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
        </symbol>
        <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
        </symbol>
    </svg>
    <% if(typeof validaciones != 'undefined') { %>
        <% validaciones.forEach( (validacion) => { %>
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
                <strong class="text-center"><%= validacion.msg %></strong>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% }) %>
    <% } %>
    <% if(error == 'success') { %>
        <div class="alert alert-success alert-dismissible fade show mt-3 mb-0" role="alert">
            
             <p class="m-0"><svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
                <strong class="text-center"><%= mensaje.correcto %></strong> 
                 </p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
    <% if(error == 'error') { %>
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#check-circle-fill"/></svg>
            <strong class="text-center"><%= mensaje.error %></strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>
        
    <form action="/IniciarSesion" method="POST" class="  mt-10  mt-3">
        <div class="container fnegro rounded movil">
            <div class="row fblanco negro rounded-top">
                <div class="col-lg-12 col-md-12 rounded p-0 text-center">
                    <h1>TRIVIAL LOS ABSOLUTOS</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 d-none d-lg-flex d-md-flex p-0 rounded-left d-flex jusify-content-center align-self-stretch">
                    <div class="row">
                        <img  class="rounded-left" src="/IMG/fondo.jpg" alt="">
                    </div>
                </div>

                <div class="col-lg-6 col-md-6 col-sm-12 p-0 d-flex flex-column justify-content-evenly">
                    <div class="row p-0 text-center mt-4">
                        <div class="col-12 t blanco">
                            <h1>¡Inicia Sesión!</h1>
                        </div>
                    </div>
                    <div class="row d-flex flex-column align-items-center justify-content-center mt-4">
                        <div class="col-11">
                            <div class="form-floating">
                                <input type="text" name="usuario" id="usuario" class="form-control" placeholder="Nombre Jugador">
                                <label for="usuario" style="font-weight: bold;">Nombre Jugador o Correo Electrónico*</label>
                            </div>
                        </div>
                    </div>

                    <div class="row d-flex flex-column align-items-center justify-content-center mt-3">
                            <div class="col-11">
                                <div class="form-floating">
                                    <input type="password" name="contrasena" id="contraseña" class="form-control" placeholder="Contraseña">
                                    <label for="contraseña" style="font-weight: bold;">Contraseña*</label>
                                </div>
                            </div>
                    </div>

                    <div class="row mb-4 mt-4">
                        <div class="col-12 d-flex justify-content-center">
                            <button id="iniciarsesion" class="btn fondo negro" style="font-weight: bold;">Iniciar Sesión</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>

